<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantallaRazasMasClases">


    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="64dp" />

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indica tu nombre"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="51dp" />

    <ImageView
        android:id="@+id/fotoRaza"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/multimedia_t7_inicio_razas_2"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="118dp" />

    <ImageView
        android:id="@+id/fotoClase"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/multimedia_t7_inicio2"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="118dp" />

    <TextView
        android:id="@+id/valoresPorDefecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Valores por defecto"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="386dp" />

</androidx.constraintlayout.widget.ConstraintLayout>