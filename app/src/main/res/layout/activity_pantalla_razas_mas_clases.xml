<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantallaRazasMasClases">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginVertical="70dp"
                android:text="Nombre: " />

            <EditText
                android:id="@+id/editNombre"
                android:layout_width="100sp"
                android:layout_height="38dp"
                android:layout_marginHorizontal="70dp"
                android:layout_marginVertical="70dp"
                android:layout_marginEnd="64dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fotoRaza"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                app:srcCompat="@drawable/multimedia_t7_inicio_razas_2" />

            <ImageView
                android:id="@+id/fotoClase"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="44dp"
                android:background="@drawable/multimedia_t7_inicio2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/valoresPorDefecto"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Valores por defecto" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>